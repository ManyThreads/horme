  "version": "0.2.0",
  "configurations": [
    {
      "name": "Horme: Reconf Docker Debug",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["horme/<node_internals>/**"],
      "type": "pwa-node",
      "preLaunchTask": "docker-compose: dev",
      "localRoot": "${workspaceFolder}/horme/dist",
      "remoteRoot": "/usr/src/app/dist",
      "outFiles": [
        "${workspaceFolder}/horme/**/*.js"
        // , "!**/node_modules/**"
      ],
      "sourceMaps": true
    }
  ]
}
